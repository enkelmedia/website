---
import cx from 'classnames';
import { twMerge } from 'tailwind-merge';
import { styles } from '../util';
interface Props {
    title: string;
    classNames?: string;
}
const { title, classNames } = Astro.props;
---

<a href={`/blog/tags/${title.toLowerCase()}`} class={styles('flex items-center justify-center border border-otherGrey rounded-full px-4 py-3 h-[40px] text-otherGrey', classNames)}>
    <span>{title}</span>
</a>
